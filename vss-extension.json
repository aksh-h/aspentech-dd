{
    "manifestVersion": 1.0,
    "id": "aspentech-priclist-control",
    "version": "0.0.10",
    "name": "AspenTech PickList Control",
    "description": "A work item form control which allows selection of a value from rest apis.",
    "publisher": "akshayh",
    "icons": {
        "default": "img/logo.png"
    },
    "categories": [
        "Azure Boards"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],
    "files": [
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "img",
            "addressable": true
        }
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/ksrikanthreddy/vsts-rest-picklist-control"
    },
    "tags": [
        "Work Items",
        "Work Item Control",
        "Sample"
    ],
    "content": {
        "details": {
            "path": "storepage.md"
        }
    },
    "scopes": [
        "vso.work",
        "vso.agentpools",
        "vso.build",
        "vso.code",
        "vso.dashboards",
        "vso.entitlements",
        "vso.extension",
        "vso.extension.data",
        "vso.gallery",
        "vso.notification",
        "vso.packaging",
        "vso.project",
        "vso.release",
        "vso.test"
    ],
    "contributions": [
		{
            "id": "singlevalue-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control which allows selection of a value from rest api.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Cascading Control",
                "uri": "dist/index.html",
                "height": 50,
				"inputs": [
				    {
                        "id":"Product",
                        "name": "Select the field for this control. This is the only input needed if the field is a picklist field with suggested values.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText", "HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"ProductUrl",
                        "name": "Url for the suggested values",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"ProductProperty",
                        "name": "Object property",
                        "description": "If the url returns an array of objects, select which object property to use as the string. Leave blank if the server returns an array of strings.",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id":"AreaName",
                        "name": "Select the field for this control. This is the only input needed if the field is a picklist field with suggested values.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText", "HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"AreaUrl",
                        "name": "Url for the suggested values",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"AreaProperty",
                        "name": "Object property",
                        "description": "If the url returns an array of objects, select which object property to use as the string. Leave blank if the server returns an array of strings.",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id":"SubareaName",
                        "name": "Select the field for this control. This is the only input needed if the field is a picklist field with suggested values.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["String", "PlainText", "HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"SubareaUrl",
                        "name": "Url for the suggested values",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"SubareaProperty",
                        "name": "Object property",
                        "description": "If the url returns an array of objects, select which object property to use as the string. Leave blank if the server returns an array of strings.",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }
				]
            }
        }
    ]
}
